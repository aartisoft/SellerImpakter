<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_color_with_border"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.impakter.seller.widget.textview.TextViewHeeboRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collection_name"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/sp_18" />

    <com.impakter.seller.widget.MyEditText
        android:id="@+id/edt_collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_button_gray_border"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="@dimen/dp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <com.impakter.seller.widget.MyButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_button"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/sp_16" />

        <com.impakter.seller.widget.MyButton
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_button"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>