<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <com.impakter.seller.widget.textview.TextViewHeeboRegular
            android:id="@+id/tv_collection_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Collection Name"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/ic_share_no_circle" />

        <LinearLayout
            android:id="@+id/layout_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:id="@+id/tv_number_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/ic_favourite_active" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/ic_edit" />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/icon_delete" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:background="@drawable/shadow_rect_2"
            android:orientation="horizontal">

            <com.impakter.seller.widget.SquareImageView
                android:id="@+id/image_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/product" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.impakter.seller.widget.SquareImageView
                        android:id="@+id/image_two"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_70"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_main"
                        android:src="@drawable/trending" />

                    <com.impakter.seller.widget.SquareImageView
                        android:id="@+id/image_three"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_70"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_button_main"
                        android:src="@drawable/trending" />

                    <com.impakter.seller.widget.SquareImageView
                        android:id="@+id/image_four"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_70"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_button_main"
                        android:src="@drawable/trending" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/iv_add_product"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent">

                        <com.impakter.seller.widget.SquareImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_main"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_add" />
                    </android.support.v7.widget.CardView>

                    <com.impakter.seller.widget.SquareImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_70"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1" />

                    <com.impakter.seller.widget.SquareImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_70"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
</LinearLayout>