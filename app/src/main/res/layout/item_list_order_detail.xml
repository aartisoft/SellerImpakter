<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/media_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:src="@drawable/image1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Wool Coat"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/sp_16" />

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_product_name"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Brand"
                    android:textAllCaps="true" />'

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_brand"
                    android:text="Order No." />

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_no"
                    android:text="Quantity : 1" />

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_quantity"
                    android:text="Price : 1" />

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_price"
                    android:text="Discount: 4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_discount"
                    android:orientation="vertical">

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black"
                        android:textColor="@color/text_color_primary" />

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="Total: Â£ 260"
                        android:textColor="@color/text_color_primary" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>