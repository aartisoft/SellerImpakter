<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/ic_back" />

        <com.impakter.seller.widget.textview.TextViewHeeboRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/order_review"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:scaleType="centerCrop"
            android:src="@drawable/image1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16">

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wool Coat"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/sp_16" />

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_name"
                android:text="Brand"
                android:textAllCaps="true" />'

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brand"
                android:text="SKU - 12345678" />

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:id="@+id/tv_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Black"
                android:textColor="@color/text_color_primary" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating_bar"
                style="@style/Widget.MaterialRatingBar.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:numStars="5"
                android:rating="2.5" />
        </RelativeLayout>

    </LinearLayout>

    <com.impakter.seller.widget.MyEditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_16"
        android:layout_weight="1"
        android:background="@drawable/bg_button_gray_border"
        android:gravity="top|left"
        android:padding="@dimen/dp_16"
        android:text="I really like this jacket! I'm at 36C 150 pd and I got a small. It fits well! Only thing is that it has no blue in it, although indicated in the picture with the model. The product looks exactly like the pictures that show just the jacket itself. Its more grey, dark grey, brown, and white. Still really cute though."
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <com.impakter.seller.widget.MyButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_blue_border"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/text_color_blue" />

        <com.impakter.seller.widget.MyButton
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_button"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:textColor="@color/text_color_white" />
    </LinearLayout>
</LinearLayout>