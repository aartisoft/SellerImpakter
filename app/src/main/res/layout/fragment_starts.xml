<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <com.impakter.seller.widget.CustomSpinner
            android:id="@+id/sp_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:minWidth="@dimen/dp_200"></com.impakter.seller.widget.CustomSpinner>

        <com.impakter.seller.widget.textview.TextViewHeeboRegular
            android:id="@+id/tv_revenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="$54K"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/sp_40" />

        <com.impakter.seller.widget.textview.TextViewHeeboRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/revenue"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_growth_percen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="36 %"
                    android:textColor="@color/text_color_green"
                    android:textSize="@dimen/sp_30" />

                <com.impakter.seller.widget.textview.TextViewHeeboLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/growth_from"
                    android:textColor="@color/text_color_green" />

                <com.impakter.seller.widget.textview.TextViewHeeboLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/the_last_month"
                    android:textColor="@color/text_color_green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_total_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="578"
                    android:textSize="@dimen/sp_30" />

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:lines="2"
                    android:text="@string/total_offerts" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_number_shipped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textSize="@dimen/sp_30" />

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:lines="2"
                    android:text="@string/shipped" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/color_gray4" />

        <com.impakter.seller.widget.textview.TextViewHeeboRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/summary"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:id="@+id/btn_show_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical">

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payments_summary"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_arrow_down_payment"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/ic_expandle_less" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/most_recent_payment" />

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_most_recent_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$12323245" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/second_last_payment" />

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_second_last_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$12323245" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/balance"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/sp_16" />

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:id="@+id/tv_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$12323245"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_show_sales_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical">

            <com.impakter.seller.widget.textview.TextViewHeeboRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sales_summary"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_arrow_down_sale"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/ic_expandle_less" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sales_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_product_sale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="@string/product_sales"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/sp_12" />

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:text="@string/units"
                        android:textAllCaps="true"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/today" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_sale_today"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="$123134"
                        android:textSize="@dimen/sp_12" />

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_unit_today"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:text="315" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lbl_15_days" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_sale_15_days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="$123134"
                        android:textSize="@dimen/sp_12" />

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_unit_15_days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:text="315" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.impakter.seller.widget.textview.TextViewHeeboRegular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lbl_30_days" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_sale_30_days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="$123134"
                        android:textSize="@dimen/sp_12" />

                    <com.impakter.seller.widget.textview.TextViewHeeboRegular
                        android:id="@+id/tv_unit_30_days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:text="315" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>